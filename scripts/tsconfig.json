{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../dist/scripts",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./**/*.ts", "../lib/**/*.ts"],
  "exclude": ["node_modules"]
} 